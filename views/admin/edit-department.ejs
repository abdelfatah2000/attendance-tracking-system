    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
          <div class="row">
              <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Edit Department</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form role="form" action="/admin/edit-department" method="POST">
                <div class="card-body">
                  <div class="form-group">
                    <label>Title</label>
                    <input type="text" class="form-control <%= validationErrors.find(e => e.param === 'title') ? 'invalid' : '' %>" name="title" placeholder="Title" value="<%= dep.title %>">
                  </div>
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <input type="hidden" value="<%= dep._id %>" name="depId">
                  <div class="form-group">
                    <label>Head of Department</label>
                    <select class="form-control <%= validationErrors.find(e => e.param === 'hod') ? 'invalid' : '' %>"
                      name="hod">
                      <% for (let hod of hods) { 
                        var selected = (hod._id.equals(dep.hod)) ? "selected" : ""; %>
                        <option value="<%= hod._id %>" <%= selected %>><%= hod.username %></option>
                      <% } %>
                    </select>
                  </div>
                  <% if (hasError) { %>
                      <div class="form-group">
                        <div class="alert alert-danger" style="margin-top:10px"><%= errorMessage %></div>
                    </div>
                  <% } %>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary btn-block">Save Employee</button>
                </div>
              </form>
            </div>
            <!-- /.card -->
          </div>
          </div>
      </div>
    </section>
    <!-- /.content -->