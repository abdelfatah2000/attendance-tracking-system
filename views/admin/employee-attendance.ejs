<style>
  .col-lg-3.attendance_div_red {
    padding: 10px;
    padding-top: 20px;
    padding-bottom: 20px;
    background: #f44336;
    border: 10px solid white;
    text-align: center;
    color: #fff;
    border-radius: 30px;
    box-shadow: 1px 1px 1px grey;
    margin-top: 10px;
    margin-bottom: 10px;
  }

  .col-lg-3.attendance_div_green {
    padding: 10px;
    padding-top: 20px;
    padding-bottom: 20px;
    background: #388e3c;
    border: 10px solid white;
    text-align: center;
    color: #fff;
    border-radius: 30px;
    box-shadow: 1px 1px 1px grey;
    margin-top: 10px;
    margin-bottom: 10px;
  }
</style>
<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">View Attendance | <%= data[0].user.username %> </h3>
          </div>
          <!-- /.card-header -->
          <!-- form start -->
          <div class="card-body">
            <div class="row">
              <% if (data) { %>
                <% for (let x of data) { %>
                  <% if (x.present == true)  { %>
                    <div class="col-lg-3 attendance_div_green">
                      <b>Date : <%= x.check_in.toISOString().split('T')[0] %></b>
                          <br>
                          <b>[ Status : Present ]</b>
                    </div>
                    <% } else { %>
                      <div class="col-lg-3 attendance_div_red">
                        <b>Date : <%= x.check_in.toISOString().split('T')[0] %></b>
                            <br>
                            <b>[ Status : Absent ]</b>
                      </div>
                      <% } %>
                        <% } %>
                          <% } else { %>
                            <div class="alert alert-danger text-center">No Attendance Data Found!</div>
                            <% } %>
            </div>
          </div>
          <!-- /.card -->

        </div>
      </div>
    </div>
</section>