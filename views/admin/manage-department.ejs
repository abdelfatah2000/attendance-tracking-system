    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
          <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Department Details</h3>
                <div class="card-tools">
                  <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                    <div class="input-group-append">
                      <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /.card-header -->
              <% if (departments.length > 0)  { %>
                <div class="card-body table-responsive p-0">
                  <table class="table table-hover text-nowrap">
                    <thead>
                      <tr>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for (let dep of departments) { %>
                      <tr>
                        <td><%= dep.title %></td>
                        <td><%= dep.hod.username %></td>
                        <td><a href="/admin/edit-department/<%= dep._id %>" class="btn btn-success fas fa-edit"></a>
                          <form role="form" action="/admin/delete-department" method="POST" style="display: inline-block !important;">
                            <input type="hidden" value="<%= dep._id %>" name="depId">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                          <button type="submit" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true" ></i></button>
                          </form>
                          </td>
                      </tr>
                    <% } %>
                    </tbody>
                  </table>
                </div>
              <% } %>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
      </div>
    </section>
    <!-- /.content -->
