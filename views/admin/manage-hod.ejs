<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Head of Department Details</h3>
            <div class="card-tools">
              <div class="input-group input-group-sm" style="width: 150px;">
                <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                <div class="input-group-append">
                  <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                </div>
              </div>
            </div>
          </div>
          <!-- /.card-header -->
          <% if (hods.length> 0) { %>
            <div class="card-body table-responsive p-0">
              <table class="table table-hover text-nowrap">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Date Joined</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% for (let [i, hod] of hods.entries()) { %>
                    <tr>
                      <td>
                        <%= i+1 %>
                      </td>
                      <td>
                        <%= hod.username %>
                      </td>
                      <td>
                        <%= hod.email %>
                      </td>
                      <td>
                        <%= hod.phone %>
                      </td>
                      <td>
                        <%= hod.createdAt.toISOString().split('T')[0] %>
                      </td>
                      <td><a href="/admin/edit-hod/<%= hod._id %>" class="btn btn-success fas fa-edit"></a>
                        <form role="form" action="/admin/delete-hod" method="POST"
                          style="display: inline-block !important;">
                          <input type="hidden" value="<%= hod._id %>" name="hodId">
                          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                          <button type="submit" class="btn btn-danger"><i class="fa fa-trash"
                              aria-hidden="true"></i></button>
                        </form>
                      </td>
                    </tr>
                    <% } %>
                </tbody>
              </table>
            </div>
            <% } %>
              <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
    </div>
  </div>
</section>
<!-- /.content -->