    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
          <div class="row">
              <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Add Department</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form role="form" action="/admin/add-department" method="post">
                <div class="card-body">
                  <div class="form-group">
                    <label>Department Title</label>
                    <input type="text" class="form-control" name="title" placeholder="Enter Department">
                  </div>
                  <div class="form-group">
                    <label>Head of Department </label>
                    <select class="form-control" name="hod">
                        <% for (let user of users) { %>
                          <option value="<%= user._id %>"><%= user.username %></option>
                        <% } %>
                    </select>
                  </div>
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <div class="form-group">
                      <% if (hasError) { %>
                        <div class="alert alert-danger" style="margin-top:10px"><%= errorMessage %></div>
                      <% } %>
                    </div>

                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary btn-block">Add Department</button>
                </div>
              </form>
            </div>
            <!-- /.card -->



          </div>
          </div>
      </div>
    </section>
    <!-- /.content -->

