    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
          <div class="row">
              <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Edit Employee</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form role="form" action="/hod/edit-employee" method="POST">
                <div class="card-body">
                  <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" name="username" placeholder="Username" value="<%= emp.username %>">
                  </div>
                  <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" placeholder="Email" name="email" value="<%= emp.email %>">
                  </div>
                  <div class="form-group">
                    <label>Phone</label>
                    <input type="tel" class="form-control" placeholder="Phone Number" name="phone" value="<%= emp.phone %>">
                  </div>
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <input type="hidden" value="<%= emp._id %>" name="empId">
                  <div class="form-group">
                    <label>Department</label>
                    <select class="form-control <%= validationErrors.find(e => e.param === 'department') ? 'invalid' : '' %>"
                      name="department">
                      <% for (let department of departments) { 
                        var selected = (department._id.equals(emp.department)) ? "selected" : ""; %>
                        <option value="<%= department._id %>" <%= selected %>><%= department.title %></option>
                      <% } %>
                    </select>
                  </div>
                  <% if (hasError) { %>
                      <div class="form-group">
                        <div class="alert alert-danger" style="margin-top:10px"><%= errorMessage %></div>
                    </div>
                  <% } %>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary btn-block">Save Employee</button>
                </div>
              </form>
            </div>
            <!-- /.card -->
          </div>
          </div>
      </div>
    </section>
    <!-- /.content -->